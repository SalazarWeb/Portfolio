<script>
  function setupSidebarNavigation() {
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('nav a[href^="#"]');

    function highlightActiveSection() {
      let current = '';
      
      sections.forEach(section => {
        const sectionTop = (section as HTMLElement).offsetTop;
        const sectionHeight = (section as HTMLElement).offsetHeight;
        const navbar = document.querySelector('nav');
        const navbarHeight = navbar ? navbar.offsetHeight : 0;
        
        // Verificar si estamos en la sección actual con un margen más preciso
        if (window.scrollY >= sectionTop - navbarHeight - 50 && 
            window.scrollY < sectionTop + sectionHeight - navbarHeight - 50) {
          current = section.getAttribute('id') || '';
        }
      });

      // Limpiar todos los estados activos primero
      navLinks.forEach(link => {
        link.classList.remove('mobile-nav-active');
      });

      // Solo agregar la clase activa si hay una sección actual válida
      if (current) {
        const activeLink = document.querySelector(`nav a[href="#${current}"]`);
        if (activeLink) {
          activeLink.classList.add('mobile-nav-active');
        }
      }
    }

    // Smooth scroll con limpieza de estados
    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        
        // Limpiar todos los estados activos inmediatamente al hacer clic
        navLinks.forEach(navLink => {
          navLink.classList.remove('mobile-nav-active');
        });
        
        const targetId = link.getAttribute('href')?.substring(1);
        const targetSection = document.getElementById(targetId || '');
        
        if (targetSection) {
          const navbar = document.querySelector('nav');
          const navbarHeight = navbar ? navbar.offsetHeight : 0;
          const additionalOffset = -40;
          const targetPosition = targetSection.offsetTop - navbarHeight - additionalOffset;
           
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
           
          setTimeout(() => {
            link.classList.add('mobile-nav-active');
          }, 100);
        }
      });
    });
 
    let scrollTimeout: ReturnType<typeof setTimeout>;
    window.addEventListener('scroll', () => {
      if (scrollTimeout) {
        clearTimeout(scrollTimeout);
      }
      scrollTimeout = setTimeout(highlightActiveSection, 50);
    });
     
    highlightActiveSection();
  }

  function setupButtonVisibility() {
    const heroButtonsContainer = document.querySelector('#hero-buttons');
    const navbarWhatsapp = document.getElementById('navbar-whatsapp');
    const navbarCv = document.getElementById('navbar-cv');

    if (!heroButtonsContainer || !navbarWhatsapp || !navbarCv) return;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Los botones del hero están visibles, ocultar los de la navbar
          navbarWhatsapp.style.opacity = '0';
          navbarWhatsapp.style.pointerEvents = 'none';
          navbarCv.style.opacity = '0';
          navbarCv.style.pointerEvents = 'none';
        } else {
          // Los botones del hero no están visibles, mostrar los de la navbar
          navbarWhatsapp.style.opacity = '1';
          navbarWhatsapp.style.pointerEvents = 'auto';
          navbarCv.style.opacity = '1';
          navbarCv.style.pointerEvents = 'auto';
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '-10px'
    });

    observer.observe(heroButtonsContainer);
  }

  // Limpiar estados al cargar la página
  document.addEventListener('DOMContentLoaded', () => {
    // Limpiar todos los estados activos al cargar
    const navLinks = document.querySelectorAll('nav a[href^="#"]');
    navLinks.forEach(link => {
      link.classList.remove('mobile-nav-active');
    });
    
    setupSidebarNavigation();
    setupButtonVisibility();
  });

  setupSidebarNavigation();
  setupButtonVisibility();
  
  document.addEventListener('astro:page-load', () => {
    // Limpiar todos los estados activos en cada carga de página
    const navLinks = document.querySelectorAll('nav a[href^="#"]');
    navLinks.forEach(link => {
      link.classList.remove('mobile-nav-active');
    });
    
    setupSidebarNavigation();
    setupButtonVisibility();
  });
</script>

