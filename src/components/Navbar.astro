    }
  }

  /* Estados base para dispositivos táctiles */
  @media (hover: none) and (pointer: coarse) {
    .mobile-nav-link:hover .mobile-nav-icon {
      transform: none;
      filter: none;
    }

    .mobile-nav-link:hover .mobile-nav-underline {
      width: 0;
      height: 0.5rem;
    }

