---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import ThemeToggle from "./ThemeToggle.astro";

const menuItems = [
  { title: "Sobre m√≠", path: "#about" },
  { title: "Proyectos", path: "#projects" },
  { title: "Habilidades", path: "#skills" },
  { title: "Contacto", path: "#contact" },
];
---

<header class="fixed w-full top-0 left-0 z-50 bg-light/90 dark:bg-dark/90 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800">
  <div class="container mx-auto">
    <Astronav>
      <div class="flex justify-between items-center h-16">
        <a href="#home" class="text-2xl font-bold text-primary">
          Portfolio
        </a>
        <div class="flex items-center gap-4">
          <ThemeToggle />
          <div class="block lg:hidden">
            <MenuIcon class="w-6 h-6 text-gray-800 dark:text-white" />
          </div>
        </div>
        <nav class="hidden lg:flex items-center space-x-8">
          {
            menuItems.map((item) => (
              <a
                href={item.path}
                class="text-gray-700 dark:text-gray-200 hover:text-primary dark:hover:text-primary font-medium transition-colors duration-300"
              >
                {item.title}
              </a>
            ))
          }
          <button class="btn-primary">Descargar CV</button>
        </nav>
      </div>
      <div class="relative">
        <MenuItems class="lg:hidden absolute top-4 right-0 left-0 bg-white dark:bg-dark-900 p-4 rounded-md shadow-lg border border-gray-200 dark:border-gray-800 z-50">
          <ul class="flex flex-col space-y-4">
            {
              menuItems.map((item) => (
                <li>
                  <a
                    href={item.path}
                    class="text-gray-700 dark:text-gray-200 hover:text-primary dark:hover:text-primary font-medium transition-colors duration-300"
                  >
                    {item.title}
                  </a>
                </li>
              ))
            }
            <li>
              <button class="btn-primary w-full">Descargar CV</button>
            </li>
          </ul>
        </MenuItems>
      </div>
    </Astronav>
  </div>
</header> 