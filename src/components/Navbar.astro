<script>
  function setupSidebarNavigation() {
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('nav a[href^="#"]');

    function highlightActiveSection() {
      let current = '';
      
      sections.forEach(section => {
        const sectionTop = (section as HTMLElement).offsetTop;
        if (window.scrollY >= sectionTop - 100) {
          current = section.getAttribute('id') || '';
        }
      });

      // Update active navigation link with new animations
      navLinks.forEach(link => {
        const isActive = link.getAttribute('href') === `#${current}`;
        
        // Remove all active classes
        link.classList.remove('mobile-nav-active');
        
        // Add active class if current
        if (isActive) {
          link.classList.add('mobile-nav-active');
        }
      });
    }

    // Smooth scroll
    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href')?.substring(1);
        const targetSection = document.getElementById(targetId || '');
        
        if (targetSection) {
          targetSection.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    window.addEventListener('scroll', highlightActiveSection);
    highlightActiveSection();
  }

  function setupButtonVisibility() {
    const heroButtonsContainer = document.querySelector('#hero-buttons');
    const navbarWhatsapp = document.getElementById('navbar-whatsapp');
    const navbarCv = document.getElementById('navbar-cv');

    if (!heroButtonsContainer || !navbarWhatsapp || !navbarCv) return;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Los botones del hero están visibles, ocultar los de la navbar
          navbarWhatsapp.style.opacity = '0';
          navbarWhatsapp.style.pointerEvents = 'none';
          navbarCv.style.opacity = '0';
          navbarCv.style.pointerEvents = 'none';
        } else {
          // Los botones del hero no están visibles, mostrar los de la navbar
          navbarWhatsapp.style.opacity = '1';
          navbarWhatsapp.style.pointerEvents = 'auto';
          navbarCv.style.opacity = '1';
          navbarCv.style.pointerEvents = 'auto';
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '-10px'
    });

    observer.observe(heroButtonsContainer);
  }

  setupSidebarNavigation();
  setupButtonVisibility();
  document.addEventListener('astro:page-load', () => {
    setupSidebarNavigation();
    setupButtonVisibility();
  });
</script>

<style>
