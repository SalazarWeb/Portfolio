    font-size: 0.9rem;
    white-space: nowrap;
    transition: all 0.3s ease;
    position: relative;
  }

  .skill-icon {
    position: absolute;
    width: 20px;
    height: 20px;
    opacity: 0;
    transition: all 0.3s ease;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }

  .skill-oval.active .skill-name {
    opacity: 0;
    transform: scale(0);
    visibility: hidden;
  }

  .skill-oval.active .skill-icon {
    opacity: 1;
    position: absolute;
  }
</style>

