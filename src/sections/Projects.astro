---
// Projects.astro - Secci√≥n de proyectos destacados

const projects = [
  {
    title: "Marketplace",
    subtitle: "client",
    description: "Minimalist platform with integrated shopping cart, user management, and an appointment scheduling system.",
    image: "/images/alonso.png",
    tags: ["React", "Node.js", "MongoDB"],
    githubUrl: "https://github.com/tu-usuario/dashboard"
  },
  {
    title: "Pictasino",
    subtitle: "client",
    description: "Virtual casino with live matches, games of chance, and online payments included.",
    image: "/images/pictasino.png",
    tags: ["Next.js", "TypeScript", "Tailwind"],
    githubUrl: "https://github.com/tu-usuario/dashboard"
  },
  {
    title: "Tic Tac Toe",
    subtitle1: "own",
    description: "Classic tic-tac-toe game with victory animations and a scoreboard.",
    image: "/images/tictactoe.png",
    tags: ["HTML", "CSS", "JavaScript"],
    githubUrl: "https://github.com/tu-usuario/taskapp"
  },
  {
    title: "Movies Selection",
    subtitle1: "own",
    description: "A movie page developed for my university to facilitate access to them from the campus.",
    image: "/images/peliculas-desktop.png",
    tags: ["HTML", "CSS", "JavaScript"],
    githubUrl: "https://github.com/tu-usuario/taskapp"
  }
];
---

<section id="projects" class="section bg-background dark:bg-background-dark">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">My Projects</h2>
      <div class="w-20 h-1 bg-primary mx-auto"></div>
      <p class="text-gray-700 dark:text-gray-300 max-w-2xl mx-auto mt-6">
        A selection of my recent projects. Each one demonstrates different skills and technologies I've learned.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="group h-48 overflow-hidden transition-all duration-500 hover:h-80">
            <img 
              src={project.image} 
              alt={`${project.title} - Imagen del proyecto`}
              class="w-full h-full object-cover transition-all duration-500 group-hover:object-contain group-hover:scale-110"
            />
          </div>
          <div class="p-6">
            <div class="flex items-baseline gap-2 mb-2">
              <h3 class="text-xl font-bold">{project.title}</h3>
              <span class="text-sm text-red-400">{project.subtitle}</span>
              <span class="text-sm text-green-400">{project.subtitle1}</span>
            </div>
            <p class="text-gray-700 dark:text-gray-300 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tags.map(tag => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
            <div class="flex justify-between">
              <a 
                href={project.githubUrl} 
                target="_blank" 
                class="text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary"
              >
                <span class="sr-only">GitHub</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="https://github.com/SalazarWeb" 
        target="_blank"
        class="btn-primary"
      >
        See more projects in GitHub
      </a>
    </div>
  </div>
</section> 